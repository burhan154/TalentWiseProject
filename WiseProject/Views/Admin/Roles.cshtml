@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<body>

    <!-- ======= Header ======= -->
    <!-- ======= Sidebar ======= -->


    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Dashboard</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">

                <!-- Left side columns -->
                <div class="col-lg-12">
                    <div class="row">

                       
                        <!-- Top Selling -->
                        <div class="col-12">
                            <div class="card top-selling overflow-auto">

                                

                                <div class="card-body pb-0">
                                    
                                    <form asp-action="CreateRole" asp-controller="Admin" method="post">
                                        <h5 class="card-title">Role List <span>| Create
                                                <input id="text" class="datatable-input" placeholder="Role Name" name="role" />
                                                <button type="submit" type="button" class="btn btn-primary btn-sm">Create</button>
                                        </span></h5>
                                            
                                    </form>
                                    <table class="table table-borderless">
                                        <thead>
                                            <tr>
                                                <th scope="col">Role</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Id</th>
                                                <th scope="col">Delete</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <th scope="row"><i class="bi bi-person"></i></th>
                                                    <td><a href="#" class="text-primary fw-bold">@item.Name</a></td>
                                                    <td class="fw-bold">@item.Id</td>

                                                    <form asp-action="DeleteRole" asp-controller="Admin" method="post">
                                                                                                               
                                                        <input hidden id="text"  name="id" value="@item.Id"/>
                                                    <td class="fw-bold"><button type="submit" type="button" class="btn btn-danger btn-sm">Delete</button></td>


                                                    </form>
                                                    
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>

                            </div>
                        </div><!-- End Top Selling -->

                    </div>
                </div><!-- End Left side columns -->

            </div>
        </section>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->


</body>
